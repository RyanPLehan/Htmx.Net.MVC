@model ContosoUniversity.Models.Department


<form class="modal-content"
      hx-trigger="submit"
      hx-delete="/departments/@Model.DepartmentID/@Model.Version"
      hx-params="__RequestVerificationToken">
    <div class="modal-header">
        <h5 class="modal-title">Delete Department</h5>
    </div>
    <div class="modal-body">
        @Html.Partial("../Shared/DetailPartial.cshtml", Model)
        <div class="text-danger" id="error-message"></div>
    </div>
    <div class="modal-footer">
            <button type="submit" class="btn btn-default btn-danger">Delete</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
